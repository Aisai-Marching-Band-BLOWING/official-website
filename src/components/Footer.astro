---
import FooterSocial from "./FooterSocial.astro";
const { ...props } = Astro.props;
---

<footer {...props}>
  <section class="social">
    <FooterSocial platform="Facebook" />
    <FooterSocial platform="Instagram" />
    <FooterSocial platform="X" />
    <FooterSocial platform="YouTube" />
  </section>

  <address>&copy; 2025 Aisai Marching Band BLOWING</address>
</footer>

<style>
  footer {
    color: rgb(var(--white));
    --shippo-bg-color: var(--black);
    background-color: rgb(var(--shippo-bg-color));
    background-image: var(--shippo-pattern-img);
    background-size: var(--shippo-pattern-size);
  }

  .social {
    display: flex;
    justify-content: center;
    gap: 2rem;
  }

  address {
    font-style: normal;
    font-size: 0.7rem;
    text-align: center;
  }
</style>
