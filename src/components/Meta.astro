---
import favicon from "@/assets/apple-touch-icon-180x180.png";
const { title, description } = Astro.props;
const favicon_url = `${Astro.url.origin}${favicon.src}`;
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>{title}</title>
<meta name="description" content={description} />
<meta name="theme-color" content="#9f166a" />
<meta name="generator" content={Astro.generator} />

<!-- OGP -->
<meta property="og:title" content={title} />
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url.href} />
<meta property="og:image" content={favicon_url} />
<meta property="og:description" content={description} />
<meta name="twitter:card" content="summary" />

<!-- icon -->
<link rel="icon" href={favicon_url} />
<link rel="apple-touch-icon" href={favicon_url} />

<!--Google Fonts-->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
<link
  href="https://fonts.googleapis.com/css2?family=Noto+Sans+JP:wght@400;700&display=swap"
  rel="stylesheet"
/>

<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-NLLMTW21WD"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag() {
    dataLayer.push(arguments);
  }
  gtag("js", new Date());

  gtag("config", "G-NLLMTW21WD");
</script>
