---
import Externallink from "./Externallink.astro";
import IconFacebook from "./IconFacebook.astro";
import IconInstagram from "./IconInstagram.astro";
import IconX from "./IconX.astro";
import IconYoutube from "./IconYoutube.astro";

import { getSNSInfo } from "@/scripts/getSNSInfo.ts";

const { platform } = Astro.props;
const { href, Icon } = getSNSInfo(platform);
---

<Externallink href={href} class="social-icon">
  <Icon size="2rem" color="rgb(var(--white))" />
</Externallink>

<style>
  .social-icon {
    &:hover,
    &:focus {
      opacity: 0.6;
    }
  }
</style>
