---
const { href } = Astro.props;
const pathname = Astro.url.pathname;
const subpath = pathname.match(/[^\/]+/g);
const isCurrent = href === pathname || href === `/${subpath?.[0]}`;
---

<a href={href} aria-current={isCurrent ? "page" : "false"}><slot /></a>

<style>
  a {
    display: block;
    font-weight: bold;
    transition: all 0.4s;
    text-decoration: none;
    color: inherit;

    @media (width < 960px) {
      padding: 1rem 4rem 1rem 1rem;
      position: relative;
      background-color: rgba(var(--white-rgb), 0.85);

      &::before {
        content: "";
        width: 11px;
        height: 11px;
        border-top: solid 2px rgb(var(--black-rgb));
        border-right: solid 2px rgb(var(--black-rgb));
        transform: translateY(-50%) rotate(45deg);
        position: absolute;
        right: 2rem;
        top: 50%;
      }
    }

    @media (960px <= width) {
      padding: 16px 24px;
      border-left: 8px solid rgba(var(--brand-rgb), 0);

      &:hover,
      &:focus,
      &[aria-current="page"] {
        border-left: 8px solid rgb(var(--brand-rgb));
        --shippo-bg-color: var(--gray3-rgb);
        background-color: rgb(var(--shippo-bg-color));
        background-image: var(--shippo-pattern-img);
        background-size: var(--shippo-pattern-size);
      }
    }
  }
</style>
